pipeline{
    agent any
    environment{
        fname="Tarvez"
        lname="Khan"
    }
    stages{
        stage('One'){
            when{
                allOf{
                    environment fname:"Tarvez"
                    environment lname="Khan" 
                }
            }
            steps{
                echo "Hello stage-one ${fname}"
            }
        }
        stage('two'){
            when{
                anyOf{
                    environment fname:"Tarvez"
                    environment lname="Khan" 
                }
            }
            steps{
                echo "Hello stage-two ${fname}"
            }
        }
    }
}