pipeline{
    agent any
    environment{
        fname = "Tarvez"
        lname = "Khan"
    }
    stages{
        stage('One'){
            when{
                allOf{
                    environment name: 'Tarvez', value: 'Khan'
                    environment name: 'lname', value: 'Khan'
                }
            }
            steps{
                echo "Hello stage-one ${fname}"
            }
        }
        stage('two'){
            when{
                anyOf{
                    environment name:"fname", value="Tarvez"
                    environment name:"lname", value="Khan"
                }
            }
            steps{
                echo "Hello stage-two ${fname}"
            }
        }
    }
}