pipeline{
    agent any
    stages{
        stage ('stage-1') {
            steps{

                sh'''

                whoami
                pwd
                date

                '''

            }
        }
    post{
        always{
            echo 'ALWAYS RUN'
        }
        success{
            echo "Run when Job passed"
        }
        failure{
            echo 'Execute when Job Failed'
        }
        unstable{
            echo 'When run is unstable'
        }
        changed{
            echo 'Run when status changes w.r.t to last run'
        }
    


    }
    
    }
}
